ul#graphFunctions.navbar-nav
  li#deleteNav.nav-item.active.ml-5
    = link_to "Delete graph",
      graph_path(@graph.id),
      class:"nav-link active",
      title:"Delete graph",
      data: { confirm: "Are you sure?" },
      method: :delete,
      remote: :true
  li#toFullGraph.nav-item.active.ml-5
    = link_to "To full graph",
      to_full_graph_path(@graph.id),
      class:"nav-link active",
      method: 'post',
      title:"To full graph",
      data: { confirm: "Are you sure?" },
      remote: :true
  li#findHamiltonian–°ycles.nav-item.active.ml-5
    #hamiltonyanCycles
    = link_to "Find Hamiltonian cycles",
      find_hamiltonyan_cycles_graph_path(@graph.id),
      class:"nav-link active",
      method: 'post',
      title:"Find Hamiltonian cycles",
      remote: :true
  #choosingGraphs
  li#calculVectorProduct.nav-item.active.ml-5
    = link_to "Vector product",
      '#',
      class:"nav-link active",
      title:"Calcul vector product of two graphs",
      remote: :true
  li#calculCartesianProduct.nav-item.active.ml-5
    = link_to "Cartesian product",
      '#',
      class:"nav-link active",
      title:"Calcul cartesian product of two graphs",
      remote: :true
  javascript:
    $('#calculCartesianProduct').click(function() {
      var id = "#{@graph.id}";
      $.get('/graphs', { product: 'cartesian', id: id });
    });
    $('#calculVectorProduct').click(function() {
      var id = "#{@graph.id}";
      $.get('/graphs', { product: 'vector', id: id });
    });
      
